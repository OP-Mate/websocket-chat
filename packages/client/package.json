{
  "name": "chat-client",
  "version": "0.0.0",
  "type": "module",
  "packageManager": "pnpm@10.12.1",
  "inject-workspace-packages": true,
  "syncInjectedDepsAfterScripts": "build",
  "scripts": {
    "dev": "concurrently \"npm run tailwind\" \"vite\"",
    "tailwind": "npx tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --coverage"
  },
  "dependencies": {
    "@tanstack/react-router": "^1.130.12",
    "@tanstack/react-router-devtools": "^1.130.13",
    "chat-shared": "workspace:*",
    "lightningcss": "^1.30.1",
    "randomcolor": "^0.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.25.65",
    "zustand": "^5.0.5"
  }
}
