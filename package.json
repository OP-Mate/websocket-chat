{
  "name": "chat",
  "version": "1.0.0",
  "main": "index.js",
  "packageManager": "pnpm@10.12.1",
  "syncInjectedDepsAfterScripts": "build",
  "injectWorkspacePackages": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter chat-shared run dev\" \"wait-on shared/dist/index.js && pnpm --filter chat-server run dev\"  \"wait-on shared/dist/index.js && pnpm --filter chat-client run dev\"",
    "client:test": "pnpm --filter chat-client run test",
    "client:lint": "pnpm --filter chat-client run lint",
    "server:lint": "pnpm --filter chat-server run lint",
    "clean": "rimraf node_modules packages/*/node_modules packages/*/dist"
  },
  "workspaces": [
    "./client",
    "./server",
    "./shared"
  ],
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@esbuild/darwin-arm64": "^0.25.6",
    "@eslint/js": "^9.30.1",
    "@rollup/rollup-darwin-arm64": "^4.44.2",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/randomcolor": "^0.5.9",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.3",
    "typescript": "5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite": "^6.3.5",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3"
  }
}
